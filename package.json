{
	"name": "new-products-api",
	"type": "module",
	"version": "1.0.0",
	"private": true,
	"engines": {
		"node": "20.10.0",
		"npm": "10.2.3"
	},
	"scripts": {
		"dev": "dotenv -e .env.development -- wrangler dev src/index.ts",
		"deploy": "wrangler deploy --minify src/index.ts",
		"cf-typegen": "wrangler types",
		"format": "prettier --write './**/*'",
		"lint": "eslint \"./**/*\"",
		"lint:fix": "npm run lint -- --fix && npm run format",
		"db:init:dev": "dotenv -e .env.development -- kysely-codegen",
		"db:init:prod": "dotenv -e .env.production -- kysely-codegen",
		"db:deploy:dev": "dotenv -e .env.development -- prisma migrate deploy",
		"db:deploy:prod": "dotenv -e .env.production -- prisma migrate deploy",
		"db:migrate": "dotenv -e .env.development -- prisma migrate dev"
	},
	"dependencies": {
		"@cloudflare/workers-types": "^4.20240529.0",
		"@prisma/client": "^5.17.0",
		"@types/pg": "^8.11.6",
		"dotenv-cli": "^7.4.2",
		"hono": "^4.5.0",
		"kysely": "^0.27.4",
		"kysely-codegen": "^0.15.0",
		"pg": "^8.12.0",
		"wrangler": "^3.57.2"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.6",
		"prettier": "^3.3.3",
		"prettier-plugin-sh": "^0.14.0",
		"prisma": "^5.17.0"
	}
}
